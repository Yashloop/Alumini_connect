<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:text="Create Your Profile"
                android:textSize="24sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="@font/centurygothic"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
            android:background="@drawable/circle_back"
            android:clipToOutline="true"
            android:contentDescription="Profile Picture"
            android:focusable="false"
            android:clickable="false"
            android:importantForAccessibility="no" />


            <!-- Inputs with fixed hint color -->
            <EditText
                android:id="@+id/nameInput"
                android:hint="Full Name"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/gradYearInput"
                android:hint="Graduation Year"
                android:inputType="number"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/degreeInput"
                android:hint="Degree"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/departmentInput"
                android:hint="Department"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/jobTitleInput"
                android:hint="Current Job Title"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/companyInput"
                android:hint="Company"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/locationInput"
                android:hint="Location"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/linkedinInput"
                android:hint="LinkedIn URL"
                android:inputType="textUri"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/emailInput"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/phoneInput"
                android:hint="Phone (Optional)"
                android:inputType="phone"
                android:textColorHint="#888888"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/phoneVisibilityCheckbox"
                android:text="Make phone number public"
                android:textColor="#875C5C"
                android:fontFamily="@font/centurygothic"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/bioInput"
                android:hint="Short Bio"
                android:textColorHint="#888888"
                android:minHeight="96dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:fontFamily="@font/centurygothic"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:text="Save Profile"
            android:fontFamily="@font/centurygothic"
            android:textColor="#000000"
            android:textStyle="bold"
            android:minHeight="48dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"
            app:layout_constraintTop_toBottomOf="@id/formLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top: User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_back"
                android:padding="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textUserDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CSE, 2021"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/textPostDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted on: 10 Apr 2025, 12:00 PM"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Post Content -->
        <TextView
            android:id="@+id/textPostContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking for Android Developers for a startup!"
            android:textSize="16sp"
            android:textColor="#222222" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
